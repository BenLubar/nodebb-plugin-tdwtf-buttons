{
	"id": "nodebb-plugin-tdwtf-buttons",
	"name": "Composer Buttons for WTDWTF",
	"description": "Composer Buttons for WTDWTF",
	"url": "https://github.com//nodebb-tdwtf-buttons.git",
	"languages": "languages",
	"defaultLang": "en_GB",
	"library": "./library.js",
	"hooks": [
		{ "hook": "filter:composer.formatting", "method": "registerFormatting" },
		{ "hook": "filter:parse.post", "method": "parse" },
		{ "hook": "filter:parse.signature", "method": "parse" },
		{ "hook": "filter:parse.raw", "method": "parse" }
	],
	"less": [
		"style.less"
	],
	"scripts": [
		"public/buttons.js",
		"public/spoiler.js"
	]
}

